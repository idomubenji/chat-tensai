{
  "family": "chat-genius",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::474668398195:role/UnifiedServicesRole",
  "taskRoleArn": "arn:aws:iam::474668398195:role/UnifiedServicesRole",
  "containerDefinitions": [
    {
      "name": "chat-genius",
      "image": "474668398195.dkr.ecr.us-east-1.amazonaws.com/chat-genius:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp",
          "hostPort": 3000
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:ssm:us-east-1:474668398195:parameter/chat-genius/DATABASE_URL"
        },
        {
          "name": "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
          "valueFrom": "arn:aws:ssm:us-east-1:474668398195:parameter/chat-genius/NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY"
        },
        {
          "name": "CLERK_SECRET_KEY",
          "valueFrom": "arn:aws:ssm:us-east-1:474668398195:parameter/chat-genius/CLERK_SECRET_KEY"
        },
        {
          "name": "NEXT_PUBLIC_SUPABASE_URL",
          "valueFrom": "arn:aws:ssm:us-east-1:474668398195:parameter/chat-genius/NEXT_PUBLIC_SUPABASE_URL"
        },
        {
          "name": "NEXT_PUBLIC_SUPABASE_ANON_KEY",
          "valueFrom": "arn:aws:ssm:us-east-1:474668398195:parameter/chat-genius/NEXT_PUBLIC_SUPABASE_ANON_KEY"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/chat-genius",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "essential": true
    }
  ]
} 